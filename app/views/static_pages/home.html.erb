<div class="bg_wrapper">
  <div class="featured_recipes_title">
    <%#= video_tag "videos/bubble_video_long_loop.mp4", autoplay: :autoplay, loop: :loop%></div>
  <div class="full_wrapper">
    <ul class="featured_recipes">
        <li class="featured_recipe_left">
          <a><%= link_to image_tag("red_sangria_trans_bg.png", size: "200x200", alt: "Edit Entry"), recipes_path(:flavor=>"Red Wine") %></a></li>
          
        <li class="featured_recipe_middle">
          <a><%= link_to image_tag("white_sangria_trans_bg.png", size: "200x200", alt: "Edit Entry"), recipes_path(:flavor=>"White Wine") %></a></li>
        
        <li class="featured_recipe_right">
          <a><%= link_to image_tag("blue_sangria_trans_bg.png", size: "200x200", alt: "Edit Entry"), recipes_path(:flavor=>"Other") %></a></li>
    </ul>
  </div>
  
    <hr>
    
    <hr>
    
  <div class="bottom_wrapper">
    <div class="body_wrapper">
      <div class="body_sections">
        <div class="body_left"> 
          <div class="yelp_title">Top Sangria Bars in NYC!</div>
          <div class="yelp_logo"><%= image_tag "yelp-logo.png", alt: "Edit Entry" %></div>
          <ol class="yelp_businesses">
            <% @yelp_response.businesses.each do | business | %>
              <li>
                <%= link_to business.name, business.url %><br>
                <%= image_tag(business.rating_img_url_small) %><br>
                <%= business.location.cross_streets %><br>
                <%= business.location.neighborhoods.first %>
              </li>
            <% end %>
          </ol>
        </div>
        <div class="body_right">
            <ul>
              <% recipe = Recipe.find(Recipe.ids.sample) %>
              <%= link_to recipe_path(recipe.id) do %> <%= image_tag "recipe_roulette_color.png" %>
              <% end %>
            </ul>
            </ul>
        </div>
        
        <div class="youtube_video"> <iframe width="400" height="200" src="https://www.youtube.com/embed/M7qjo30yJYQ" frameborder="0" allowfullscreen></iframe></div>
      </div>
    </div>
    <div class="twitter-timeline">
      <ol>
        <%# @twitter_response.each do |tweet| %>
          <li>
            <%#= link_to tweet.text, "https://www.twitter.com/#{tweet.user.screen_name}"%>
            <%#= image_tag(tweet.media[0]["media_url"]) if(tweet.media.present?) %> <br><br>
          </li>
        <%# end %>
      </ol>
    </div>
  </div>
</div>