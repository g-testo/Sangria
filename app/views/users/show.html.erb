<h1><%= current_user == @user ? "My Profile Page" : (@user.user_name + '\'s Profile Page') %></h1>
<h3>User Information</h3>

<ul>
  <li> User email: <%= @user.email %></li>
  <li><%= image_tag @user.avatar, width: "128" %></li>
</ul>
<h3>List of submitted recipes</h3>
<ul>
  <% @user.recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe.id) do %>
      <li><%= image_tag recipe.recipe_image.url, width: "64" %></li>
      <li><span class="index_name"><%= recipe.name %></span></li>
      <small>Published <%= time_ago_in_words(recipe.created_at) %> ago</small>

    <% end %>
  <% end %>
</ul>

<section class="stats">
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if current_user %>
