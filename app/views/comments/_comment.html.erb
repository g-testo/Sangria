<% if comment.created_at %>
  <div class='<%= comment_counter > 1 ? 'hide_add_comments' : "" %>'>
    <div class="comment_container">
      <%= link_to User.find(comment.user_id).user_name, user_path(User.find(comment.user_id).id) %>
      wrote
      <%= visibility_auth(current_user, comment.user_id) ? (editable comment, :body) : comment.body %>
      <br>
      <small>Published <%= time_ago_in_words(comment.created_at) %> ago</small>
      <div>
        <% if visibility_auth(current_user, comment.user_id) %>
        <%= link_to 'Delete', [comment.recipe, comment],
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
