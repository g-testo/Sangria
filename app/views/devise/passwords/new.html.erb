<div class="devise_forgot_password_wrapper">
  <div class="devise_forgot_password_form">
    <div class="devise_forgot_title">Forgot your password?</div>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: "Required"%>
      <%= f.submit "Send me reset password instructions", :class => "btn btn-default" %>
    <% end %>
    <br>
    <div><%= render "devise/shared/links" %></div>
  </div>
</div>
