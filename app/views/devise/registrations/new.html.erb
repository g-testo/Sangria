<div class="devise_signup_wrapper">
  <div class="devise_signup_form">
    <div class="devise_signup_title">Sign up</div>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "Required"%>
      <%= f.text_field :user_name%>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Required"%>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Required" %>
      <%= f.check_box :remember_me %>
      <br>
      <%= f.submit "Submit", :class => "btn btn-default" %>
    <% end %>
    <div><%= render "devise/shared/links" %></div>
  </div>
</div>
