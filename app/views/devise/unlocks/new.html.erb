<div class="devise_unlock_wrapper">
  <div class="devise_unlock_form">
    <div class="devise_unlock_title">Resend unlock instructions</div>
    <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.submit "Resend unlock instructions", :class => "btn btn-default" %>
    <% end %>
    <div><%= render "devise/shared/links" %></div>
  </div>
</div>
