<div class="recipe_index_wrapper">
    <span class="recipe_index_title">Recipe List</span><br>
    <div class="recipe_index_content">
        <% @recipes.each do |recipe| %>
            <ul>
                <li><%= image_tag recipe.recipe_image.url %></li>
                <li><span class="index_name"><%= recipe.name %></span></li>
                <li><span class="index_author"><%= recipe.author %></span></li>
            </ul>
        <% end %>
    </div>
</div>