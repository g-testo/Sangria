<h1>Recipes#index</h1>

<table>
    <thead>
        <th>ID</th>
        <th>Author</th>
        <th>Instructions</th>
    </thead>
    <tbody>
<% @recipes.each do |recipe| %>
    <tr>
        <td><%= recipe.id %></td>
        <td><%= recipe.author %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to "edit", edit_recipe_path(recipe)%></td>
        <td><%= link_to "delete", recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
<% end %>
    </tbody>
</table>
